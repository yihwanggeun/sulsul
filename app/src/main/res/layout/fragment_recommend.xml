<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/radius"
            android:backgroundTint="#CDB1FF"
            android:fontFamily="@font/kakaobold"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="당신만을 위한 술을 추천해드립니다."
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recommendbutton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:fontFamily="@font/kakaobold"
            android:text="Recommendation"
            android:textColor="#A776FF "
            android:textSize="20sp"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar7"
            app:strokeColor="#CDB1FF "
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radius"
            android:backgroundTint="#DDDDDD"
            android:fontFamily="@font/kakaoregular"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:text="달달한 술을 좋아하시나요?"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radius"
            android:backgroundTint="#DDDDDD"
            android:fontFamily="@font/kakaoregular"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:text="알코올 도수가 높은 술을 좋아하시나요?"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radius"
            android:backgroundTint="#DDDDDD"
            android:fontFamily="@font/kakaoregular"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:text="특이한 향의 술을 좋아하시나요?"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/radius"
            android:backgroundTint="#DDDDDD"
            android:fontFamily="@font/kakaoregular"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="7dp"
            android:text="오늘 하루 행복하셨나요?"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <SeekBar
            android:id="@+id/seekBar3"

            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:max="4"
            android:progress="0"
            android:progressTint="#673AB7"
            android:thumbTint="#B791FA"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <SeekBar
            android:id="@+id/seekBar4"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:max="4"
            android:progress="0"
            android:progressTint="#673AB7"
            android:thumbTint="#B791FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <SeekBar
            android:id="@+id/seekBar5"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:max="4"
            android:progress="0"
            android:progressTint="#673AB7"
            android:thumbTint="#B791FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <SeekBar
            android:id="@+id/seekBar6"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:max="4"
            android:progress="0"
            android:progressTint="#673AB7"
            android:thumbTint="#B791FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <SeekBar
            android:id="@+id/seekBar7"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:max="4"
            android:progress="0"
            android:progressTint="#673AB7"
            android:thumbTint="#B791FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radius"
            android:backgroundTint="#DDDDDD"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:text="과일 향의 술을 좋아하시나요?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>