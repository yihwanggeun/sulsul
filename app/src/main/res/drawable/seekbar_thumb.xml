<?xml version="1.0" encoding="utf-8"?>
<!-- 원모양의 seekbar thumb -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    android:useLevel="false"  >
    <!-- 배경 색상 -->
    <solid
        android:color="@color/purple_200"/>
    <!-- 테두리 색상 (생략 가능) -->
    <stroke
        android:width="0.3dp"
        android:color="@color/purple_500" />
    <!-- 크기 -->
    <size
        android:width="13dp"
        android:height="13dp"/>
</shape>
